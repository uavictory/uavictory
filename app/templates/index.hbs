<Countdown />
<Bayraktar/>
<div class="under-countdown">
    <span class="under-countdown-txt" {{on 'click' this.toggleWhyWin}}>
        Why Ukraine will Win
    </span>

    <div class="why-win {{this.hideBlurbClass}} ">
        <div>
            {{{this.whyBlurb}}}
        </div>
        <div class="close-why-win" {{on 'click' this.toggleWhyWin}}>
            Close
        </div>
    </div>

</div>

<div class="todays-news">
    <h3>Latest News</h3>

    <div class="news-items">
        {{#each this.latest as |link| }}
            <div class="news-item">
                - <a href={{link.url}} target="_blank" rel="noopener noreferrer">{{link.t}}</a>
            </div>
        {{/each}}
    </div>

    <h3 class="special-item">2022 Overture</h3>
    <h4 class="special-item">Heroic Resistance of the Ukrainian People</h4>
    <Link @url="https://www.youtube.com/watch?v=7fQNHcXIb-A" 
        @imgUrl="stop_tank_youtube_link_lEmzCek-g.png" 
        @imgClass="link2022"/>
</div>

<h3 class="countdown-text">Invasion Timeline</h3>
<div class="main-timeline">

    {{#each this.model as |event|}}
        <TimelineEvent @event={{event}} />
    {{/each}}

    <div class="victory-event">
        <div class="victory-date">
            <span class="event-date-day">Day 182</span>
            <span class="victory-date-text">Independence Day 2022</span>
            <span class="event-date-date">2022-08-24</span>
        </div>

        <div class="event-text">
                The orcs will be scurrying back to the Misty Mountains and the era of a
                free Ukraine will be dawning
        </div>
        <div class="event-image">
            <Image @src='independence_momument_XoczqK_Dq.png' />
        </div>
    </div>
</div>
